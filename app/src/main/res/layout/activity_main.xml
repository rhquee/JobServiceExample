<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.kfrak.jobserviceexample.MainActivity">

    <Chronometer
        android:id="@+id/activity_main_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="startJob"
        android:id="@+id/activity_main_start_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start a job"/>

    <Button
        android:onClick="stopJob"
        android:id="@+id/activity_main_cancel_jobs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel all jobs"/>


</LinearLayout>
